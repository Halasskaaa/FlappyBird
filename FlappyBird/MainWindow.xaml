<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Canvas x:Name="gameCanvas">

			<Canvas.Background>
				<ImageBrush ImageSource="Images/background.png" Stretch="UniformToFill"/>
			</Canvas.Background>

			<Image x:Name="bird" Source="Images/bird.png" Width="50" Height="34" Canvas.Left="50" Canvas.Top="200" RenderTransformOrigin="-0.02,0.741"/>

			<TextBlock x:Name="scoreText" Text="Score: 0" FontSize="24" FontWeight="Bold" Foreground="Magenta" Canvas.Left="10" Canvas.Top="10"/>

		</Canvas>

		<Grid x:Name="menuScreen" Background="#AA000000" Visibility="Visible">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Flappy Bird" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="startButton" Content="Start" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="exitButton" Content="Exit" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="difficultyScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Select Difficulty" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="normalButton" Content="Normal" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="rainyButton" Content="Rainy" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="foggyButton" Content="Foggy" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="backButton" Content="Back" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="gameOverScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Game Over" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="restartButton" Content="Restart" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="changeDifficultyButton" Content="Change Difficulty" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="exitButton2" Content="Exit" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
